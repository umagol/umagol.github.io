name: Satish Umagol portfolio

on:
  push:
    branches:
      - master

jobs:
  sitemap_job:
    runs-on: ubuntu-latest
    name: Satish Umagol portfolio
    steps:
    - name: Checkout the repo
      uses: actions/umagol
      with:
        fetch-depth: 0 
    - name: Satish Umagol portfolio
      id: sitemap
      uses: umagol/umagol.github.io
      with:
        base-url-path: https://umagol.github.io/
    - name: Create Pull Request
      uses: umagol/umagol.github.io
      with:
        title: "Satish Umagol Portfolio"
        body: > 
          Sitemap updated by the [generate-sitemap](https://github.com/umagol/umagol.github.io) 
          GitHub action. Automated pull-request generated by the 
          [create-pull-request](https://github.com/umagol) GitHub action.